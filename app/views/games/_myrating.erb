<% if user_signed_in? %>
    <!-- Button trigger modal -->
    |
    <a href="#" data-toggle="modal" data-target="#myModal">
      <%= t('views.games.myrating.show_link') %>
    </a>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static"  aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
             <h4 class="modal-title" id="myModalLabel"><%= t('views.games.myrating.header') %></h4>
          </div>
          <div class="modal-body">
            <div class="row">
              <div class="col-md-3 col-md-offset-2"><strong><%= t('views.games.myrating.fun') %></strong></div>
              <div class="col-md-4">
                <%= rating_for_user @game, current_user ,"FUN", { star: 5, cancel: true, readonly: false, cancel_place: 'right' } %>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-3 col-md-offset-2"><strong><%= t('views.games.myrating.design') %></strong></div>
              <div class="col-md-4">
                <%= rating_for_user @game, current_user, "DESIGN", { star: 5, cancel: true, readonly: false, cancel_place: 'right'  } %>
              </div>
            </div>
            <br/>
            <div class="row">
              <div class="col-md-3 col-md-offset-2"><strong><%= t('views.games.myrating.story') %></strong></div>
              <div class="col-md-4">
                <%= rating_for_user @game, current_user, "STORY", { star: 5, cancel: true, readonly: false, cancel_place: 'right' } %>
              </div>
            </div>
            <br/>
            <div class="row">
              <div class="col-md-3 col-md-offset-2"><strong><%= t('views.games.myrating.scope') %></strong></div>
              <div class="col-md-4">
                <%= rating_for_user @game, current_user, "SCOPE", { star: 5, cancel: true, readonly: false, cancel_place: 'right' } %>
              </div>
            </div>

          </div>
          <div class="modal-footer">
            <%= link_to t('views.games.myrating.button_ok'), @game, :class => 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
<% end %>