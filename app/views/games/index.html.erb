<% if notice.present? %>
<p class="alert alert-info" role="alert" id="notice"><%= notice %></p>
<% end %>
<h1>Listing Games</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Developer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= link_to game.title, game %></td>
        <td><%= game.developer %></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path, :class => "btn btn-default" %>
