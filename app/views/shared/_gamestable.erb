<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead>
    <tr>
      <% if !search %>
      <th>Rang</th>
      <% end %>
      <th>Spiel</th>
      <th class="hidden-xs">Entwickler</th>
      <th class="hidden-xs">Erscheinungsdatum</th>
      <th>Bewertung</th>
      <th class="hidden-xs"></th>
    </tr>
    </thead>
    <tbody>
    <% i = 0 %>
    <% @games.each do |game | %>
        <% i = i + 1 %>
        <tr>
          <% if !search %>
          <td># <%= i %></td>
          <% end %>
          <td ><%= link_to game.title, game %></td>
          <td class="hidden-xs"><%= game.developer %></td>
          <td class="hidden-xs"><%= game.releaseDate %></td>
          <td><%= rating_for game, "GESAMT",  { readonly: true} %></td>
          <td class="text-right hidden-xs">
            <%= link_to 'Bearbeiten', edit_game_path(game) %> |
            <%= link_to 'LÃ¶schen', game, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
