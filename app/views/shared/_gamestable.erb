<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead>
    <tr>
      <% if !search %>
      <th>Rang</th>
      <% end %>
      <th>Spiel</th>
      <th>Entwickler</th>
      <th>Erscheinungsdatum</th>
      <th>Bewertung</th>
    </tr>
    </thead>
    <tbody>
    <% i = 0 %>
    <% @games.each do |game | %>
        <% i = i + 1 %>
        <tr>
          <% if !search %>
          <td># <%= i %></td>
          <% end %>
          <td><%= link_to game.title, game %></td>
          <td><%= game.developer %></td>
          <td><%= game.releaseDate %></td>
          <td><%= rating_for game, "GESAMT",  { readonly: true} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
